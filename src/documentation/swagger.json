    "paths": {
        "/apiCourses.php/courses": {
            "get": {
                "summary": "Get All courses data",
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Entry not found"
                    }
                }
            },
            "post": {
                "summary": "Create a new entry",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "den": {
                                        "type": "string"
                                    },
                                    "cas_od": {
                                        "type": "string"
                                    },
                                    "cas_do": {
                                        "type": "string"
                                    },
                                    "typ_akcie": {
                                        "type": "string"
                                    },
                                    "nazov_akcie": {
                                        "type": "string"
                                    },
                                    "miestnost": {
                                        "type": "string"
                                    },
                                    "vyucujuci": {
                                        "type": "string"
                                    }
                                },
                                "required": ["den", "cas_od", "cas_do", "typ_akcie", "nazov_akcie", "miestnost", "vyucujuci"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Unable to create course"
                    },
                    "500": {
                        "description": "DB error"
                    }
                }
            }
        },
        "/apiCourses.php/courses?id={id}": {
            "get": {
                "summary": "GET Course",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
