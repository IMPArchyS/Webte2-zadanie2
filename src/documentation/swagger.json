                    },
                    "500": {
                        "description": "Failed to delete course"
                    },
                    "400": {
                        "description": "Missing Course id"
                    },
                    "404": {
                        "description": "Course with id not found"
                    }
                }
            },
            "put": {
                "summary": "Update an Course",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "den": {
                                        "type": "string"
                                    },
                                    "cas_od": {
                                        "type": "string"
