                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Missing Course id"
                    },
                    "404": {
                        "description": "Course with id not found"
                    }
                }
            },
            "delete": {
                "summary": "DELETE Course",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
